{
	"name": "Redmine MCP Server",
	"build": {
		"dockerfile": "../Dockerfile",
		"target": "builder"
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff"
			]
		}
	},
	"postCreateCommand": "uv sync",
	"remoteEnv": {
		"REDMINE_URL": "${localEnv:REDMINE_URL}",
		"REDMINE_API_KEY": "${localEnv:REDMINE_API_KEY}"
	}
}
